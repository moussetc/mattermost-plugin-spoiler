{
    "id": "com.github.moussetc.mattermost.plugin.spoiler",
    "name": "Spoiler Command",
    "description": "This plugin defines a /spoiler command.",
    "version": "2.0.0",
    "server": {
        "executables": {
            "linux-amd64": "server/dist/plugin-linux-amd64",
            "darwin-amd64": "server/dist/plugin-darwin-amd64",
            "windows-amd64": "server/dist/plugin-windows-amd64.exe"
        }
    },
    "webapp": {
        "bundle_path": "webapp/dist/main.js"
    },
    "settings_schema": {
        "header": "",
        "footer": "",
        "settings": [
	    {
	        "key": "SpoilerMode",
	        "display_name": "Spoiler display mode",
		"help_text": "This setting only applies to the web client (native apps like the Android app don't support plugin customization). Native apps will always use the button mode.",
		"type": "radio",
		"default": "button",
		"options": [
		    {
	                "value": "button",
		        "display_name": "Show spoiler button"
		    },
		    {
		        "value": "redacted",
		        "display_name": "Highlight ('redacted' look)"
		    }
		]
	    }
	]
    }
}
